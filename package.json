{
  "name": "AppEngineRESTBoilerplate",
  "version": "1.0.0",
  "private" : true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Brok-Bucholtz/AppEngineRESTBoilerplate.git"
  },
  "scripts": {
    "postinstall": "node ./operations/setup_server.js",
    "start": "grunt dev",
    "test": "grunt test",
    "coverage": "grunt coverage",
    "generate-docs": "jsdoc ./README.md --configure ./operations/jsdoc-conf.json",

    "prepare": "npm test && npm run lint && npm run style && npm run coverage && istanbul check-coverage ./docs/coverage/coverage.json --config ./operations/istanbul-conf.json",
    "lint": "jshint . --exclude-path ./operations/jshint-ignore.txt --config ./operations/jshint-conf.json",
    "style": "jscs . --config ./operations/jscs-conf.json"
  },
  "author": "Brok Bucholtz",
  "dependencies": {},
  "devDependencies": {
    "grunt": "latest",
    "grunt-cli": "latest",
    "grunt-gae": "latest",
    "grunt-karma": "latest",
    "grunt-contrib-jasmine": "latest",
    "grunt-template-jasmine-istanbul": "latest",

    "jasmine": "latest",
    "jasmine-core": "latest",

    "phantomjs": "latest",
    "istanbul": "latest",
    "karma": "latest",
    "karma-jasmine": "latest",
    "karma-chrome-launcher": "latest",
    "karma-firefox-launcher": "latest",
    "karma-safari-launcher": "latest",
    "karma-ie-launcher": "latest",
    "karma-phantomjs-launcher": "latest",

    "coveralls": "latest",
    "ncp": "latest",
    "jshint": "latest",
    "jsdoc": "latest",
    "jscs": "latest"
  },
  "license": "Apache-2.0"
}
